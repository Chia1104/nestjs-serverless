{
  "name": "nestjs-serverless",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:nest": "nest build -b swc",
    "zeabur-sls-build": "nest build -b swc -p tsconfig.zeabur-sls.json && pnpm sls-pre-build && node infra/zeabur/post-build.js",
    "sls-pre-build": "rm -rf node_modules && pnpm i --prod --ignore-scripts",
    "vercel-sls-build": "nest build -b swc -p tsconfig.vercel-sls.json && pnpm sls-pre-build && node infra/vercel/post-build.js",
    "build": "turbo run build:nest",
    "zeabur-sls:build": "turbo run zeabur-sls-build",
    "vercel-sls:build": "turbo run vercel-sls-build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "dev:nest": "nest start --watch",
    "dev": "turbo run dev:nest",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "sls:deploy": "sls deploy",
    "sls:offline": "sls offline",
    "sls:package": "sls package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@vendia/serverless-express": "^4.10.4",
    "aws-lambda": "^1.0.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/aws-lambda": "^8.10.125",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "serverless": "^3.36.0",
    "serverless-offline": "^13.2.0",
    "shell-quote": "^1.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "unplugin-swc": "^1.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
